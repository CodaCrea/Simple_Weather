<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppWeather.WelcomePage"
    Title="Bienvenue"
    BackgroundColor="#394e6d">
    <VerticalStackLayout
        VerticalOptions="Center"
        Margin="20"
        Spacing="10">
        <Image
            Source="welcome_page.png"
            HeightRequest="200"
            WidthRequest="200" />
        <Label
            Text="Bienvenue sur Simple Weather"
            FontSize="40"
            TextColor="White" />
        <Label
            Text="Cette application météo propose une interface simplifiée, permettant un accès rapide et efficace aux prévisions essentielles"
            FontSize="Small"
            TextColor="White" />
        <Button
            x:Name="GetStartedBtn"
            Clicked="GetStartedBtnClicked"
            Text="C'est parti"
            FontSize="Large"
            BackgroundColor="Yellow"
            TextColor="Black"
            WidthRequest="250"
            Margin="0, 50, 0, 0" />
    </VerticalStackLayout>
</ContentPage>